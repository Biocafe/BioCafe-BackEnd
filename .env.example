# Puerto del servidor (Render lo asigna automáticamente)
PORT=3001

# URL del frontend para configurar CORS
FRONTEND_URL=https://tu-frontend.netlify.app

# Configuración de la base de datos MongoDB
MONGODB_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/biocafe

# Configuración de email para nodemailer
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-contraseña-de-aplicacion

# JWT Secret (opcional, si usas autenticación JWT)
JWT_SECRET=tu-jwt-secret-muy-seguro

# Entorno de ejecución
NODE_ENV=production